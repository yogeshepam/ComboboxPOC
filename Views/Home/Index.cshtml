@model ProductViewModel
@{
    ViewData["Title"] = "Index";
}



<div class="col-md-5">

    <form asp-controller="ShowProduct" asp-action="Index" method="post" role="form">
        <div> <h2> Dropdown List sample - Select tag</h2> </div>
        <div class="form-group">
            <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
            <label asp-for="ProductId"></label><br />
            <select asp-for="ProductId"
                    class="form-control"
                    asp-items="@(new SelectList(Model.Listofproducts,"Value", "Text"))">
            </select>
        </div><br />


        @using (Html.BeginForm())
        {
            <div class="col-lg-12 control-section">
                <div id="wrapper">
                  <h2>Html DropdownList sample</h2>
                    @Html.DropDownList("ProductId", new SelectList(ViewBag.List.Listofproducts, "Value", "Text"))
                </div>
            </div>
        }

        <br />
       @*  @Html.ActionLink("Jquery Sample", "ComboBox", "Home") %> *@
    </form>

    
</div>

